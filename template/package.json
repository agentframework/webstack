{
  "name": "{{ name }}",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "description": "{{ description }}",
  "author": "{{ author }}",
  "scripts": {
    "start": "node_modules/.bin/nodemon --config tools/testmon.json",
    "serv": "node_modules/.bin/nodemon --config tools/servmon.json",
    "standalone": "node_modules/.bin/ts-node src/bin/standalone.ts",
    "test": "npm run lint && npm run build && npm run test:clean && npm run test:coverage",
    "cov": "npm run test:clean && npm run test:coverage",
    "test:clean": "rm -rf test/minimal/data",
    "test:unit": "node_modules/.bin/ts-node tools/jasmine.ts || exit 0",
    "test:coverage": "TEST_PROPERTY=test NODE_ENV=test node_modules/.bin/ts-node node_modules/.bin/istanbul cover --config=tools/istanbul.yaml node_modules/.bin/jasmine JASMINE_CONFIG_PATH=tools/jasmine.full.json || exit 0",
    "lint": "standard --pretty",
    "build": "npm run build:clean && npm run build:tsc && npm run build:webpack || exit 0",
    "build:clean": "rm -rf ./bin/* && rm -rf ./public/*",
    "build:tsc": "node_modules/.bin/tsc -p tsconfig.json --noEmit",
    "build:webpack": "node_modules/.bin/webpack --display-error-details --config tools/webpack.build.config.ts",
    "test-on-travis": "npm run lint && npm run test:coverage",
    "test-on-teamcity": "exit 1"
  },
  "dependencies": {
    "agentframework": "~0",
    "agentstack": "~0",
    "axios": "~0",
    "body-parser": "~1",
    "botbuilder": "~3",
    "compression": "~1",
    "cookie-parser": "~1",
    "express": "5.0.0-alpha.5",
    "helmet": "~3",
    "huaming": "~3",
    "jsonwebtoken": "~7",
    "moment": "~2",
    "mongodb-core": "~2",
    "passport": "~0",
    "passport-oauth2": "~1",
    "response-time": "~2",
    "router": "~1",
    "rxjs": "~5",
    "shortid": "~2"
  },
  "devDependencies": {
    "@types/express": "latest",
    "@types/jasmine": "latest",
    "@types/jsonwebtoken": "latest",
    "@types/node": "latest",
    "@types/shortid": "latest",
    "babel-core": "latest",
    "babel-loader": "latest",
    "babel-preset-babili": "latest",
    "custom-css-loader": "latest",
    "extract-text-webpack-plugin": "latest",
    "file-loader": "latest",
    "html-webpack-plugin": "latest",
    "istanbul": "next",
    "jasmine": "latest",
    "jasmine-spec-reporter": "latest",
    "nodemon": "latest",
    "optimize-css-assets-webpack-plugin": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "typescript": "latest",
    "typescript-standard": "latest",
    "vue": "latest",
    "vue-loader": "latest",
    "vue-router": "latest",
    "vue-template-compiler": "latest",
    "vue-ts-loader": "latest",
    "vuex": "latest",
    "webpack": "latest",
    "webpack-bundle-analyzer": "latest",
    "webpack-dev-middleware": "latest",
    "webpack-hot-middleware": "latest"
  }
}
