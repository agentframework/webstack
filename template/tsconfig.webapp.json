{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.Promise",
      "es2016"
    ],
    "declaration": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "src/shared/*.ts",
    "src/webapp/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts"
  ]
}
