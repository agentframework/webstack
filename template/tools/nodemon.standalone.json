{
  "exec": "node_modules/.bin/ts-node --debug src/bin/standalone.ts",
  "ext": "ts json yaml",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo 'FILE: '$FILENAME' was changed'"
  },
  "watch": [
    "conf",
    "src/bin",
    "src/conf",
    "src/lib",
    "src/shared",
    "tools"
  ]
}
